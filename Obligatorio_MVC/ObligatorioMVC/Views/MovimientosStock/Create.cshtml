@model DataTransferObjects.MovimientoStockDTO

@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<span class="alert-danger">@ViewBag.ErrorMsg</span>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ArticuloId">Artículo</label>
                <select asp-for="ArticuloId" class="form-select">
                    @foreach (var articulo in Model.Articulos) {
                        <option value="@articulo.Id">@articulo.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TipoMovimientoId">Tipo De Movimiento</label>
                <select asp-for="TipoMovimientoId" class="form-select">
                    @foreach (var tm in Model.TiposMovimientos) {
                        <option value="@tm.Id">@tm.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
